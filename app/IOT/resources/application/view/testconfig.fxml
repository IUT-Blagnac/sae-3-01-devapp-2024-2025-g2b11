<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label alignment="CENTER" style="-fx-font-size: 20px; -fx-padding: 10;" text="Configuration des données à afficher"  />
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" >
            <Label style="-fx-font-size: 16px;" text="Choix des données à afficher : " />
            
            <!-- Groupe de boutons radio pour le choix des données -->
            <ToggleGroup fx:id="dataChoiceGroup">
                <RadioButton fx:id="solarPanelsRadio" text="Panneaux Solaires" />
                <RadioButton fx:id="sensorsRadio" text="Capteurs" />
                <RadioButton fx:id="bothRadio" text="Les deux" />
            </ToggleGroup>
            
            <!-- Bouton "Choix salle" -->
            <Button fx:id="chooseRoomButton" disable="true" prefWidth="200" text="Choix salle" />
            
            <!-- Espacement entre les éléments -->
            <VBox alignment="CENTER" spacing="10">
                <!-- Bouton Suivant -->
                <Button fx:id="nextButton" prefWidth="200" text="Suivant" />
                
                <!-- Bouton Retour -->
                <Button fx:id="backButton" prefWidth="200" text="Retour" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
