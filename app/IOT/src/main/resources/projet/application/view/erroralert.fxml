<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8.0.171" alignment="CENTER" hgap="10" vgap="10" style="-fx-background-color: #e74c3c; -fx-border-radius: 10; -fx-padding: 20;">
    <children>
        <Label text="Une erreur est survenue !" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <GridPane GridPane.rowIndex="1" hgap="10">
            <Button text="OK" onAction="#handleOk" style="-fx-background-color: white; -fx-text-fill: #e74c3c;" />
            <Button text="Fermer" onAction="#handleClose" style="-fx-background-color: white; -fx-text-fill: #e74c3c;" />
        </GridPane>
    </children>
</GridPane>
