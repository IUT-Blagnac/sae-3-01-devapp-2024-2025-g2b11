<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="1000" style="-fx-background-color: #1e1e2f;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Barre supérieure -->
    <top>
        <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
            <children>
                <Label prefHeight="35.0" prefWidth="258.0" style="-fx-font-size: 24; -fx-text-fill: #ffffff;" text="Pannel de contrôle" />
            <Region prefHeight="35.0" prefWidth="448.0" />
                <ComboBox fx:id="timeRangeComboBox" editable="true" prefHeight="31.0" prefWidth="218.0" promptText="Sélectionner la période" style="-fx-background-color: #34495e; -fx-text-fill: #ffffff;" />
                <Button prefHeight="31.0" prefWidth="91.0" style="-fx-background-color: #27ae60; -fx-text-fill: #ffffff;" text="Rafraîchir" />
            </children>
        </HBox>
    </top>

    <!-- Contenu principal -->
    <center>
        <VBox spacing="20" style="-fx-padding: 10;">
            <children>

                <!-- Section Graphiques -->
                <HBox alignment="CENTER" spacing="20">
                    <children>
                  <MenuButton mnemonicParsing="false" style="-fx-background-color: #2c3e50; -fx-padding: 10;" text="Données à afficher" textFill="WHITE">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Température (°C)" />
                      <MenuItem mnemonicParsing="false" text="Humidité (%)" />
                        <MenuItem mnemonicParsing="false" text="CO2 (ppm)" />
                        <MenuItem mnemonicParsing="false" text="Pression" />
                        <MenuItem mnemonicParsing="false" text="Activité" />
                        <MenuItem mnemonicParsing="false" text="TVOC" />
                        <MenuItem mnemonicParsing="false" text="Illumination" />
                        <MenuItem mnemonicParsing="false" text="Infrarouge" />
                        <MenuItem mnemonicParsing="false" text="Infrarouge et Visible" />
                        <MenuItem mnemonicParsing="false" text="Courant" />
                    </items>
                  </MenuButton>
                  <MenuButton mnemonicParsing="false" style="-fx-background-color: #2c3e50; -fx-padding: 10;" text="Choix de graphique" textFill="WHITE">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Courbes" />
                        <MenuItem mnemonicParsing="false" text="Bätons" />
                     </items>
                  </MenuButton>
                    </children>
                </HBox>
            <Label alignment="CENTER" prefHeight="53.0" prefWidth="980.0" text="NULL" textFill="WHITE">
               <font>
                  <Font size="29.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="-30.0" left="200.0" right="200.0" />
               </VBox.margin>
            </Label>
            <LineChart nodeOrientation="LEFT_TO_RIGHT" prefHeight="559.0" prefWidth="980.0" style="-fx-textfill-color: #ffffff">
               <xAxis>
                  <CategoryAxis side="BOTTOM" tickLabelFill="WHITE" />
               </xAxis>
               <yAxis>
                  <NumberAxis side="LEFT" tickLabelFill="WHITE" />
               </yAxis>
            </LineChart>
            </children>
        </VBox>
    </center>

    <!-- Barre inférieure -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
            <children>
                <Label style="-fx-text-fill: #ffffff; -fx-font-size: 14;" text="© 2024 - Application IOT - IUT de Blagnac" />
            </children>
        </HBox>
    </bottom>

    <stylesheets>
      <URL value="@../style.css" />
      <URL value="@../style/style.css" />
   </stylesheets>
   <left>
      <ListView prefHeight="200.0" prefWidth="200.0" style="-fx-padding: 10; -fx-background-color: #53728D;" BorderPane.alignment="CENTER" />
   </left>
    
</BorderPane>
